{
  "name": "create-mern-application",
  "version": "0.12.0",
  "description": "A bootstrapper for creating a MERN application.",
  "bin": {
    "create-mern-application": "index.js"
  },
  "main": "index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf build && tsc && copyfiles -u 1 \"src/template/**/*\" build",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx}\"",
    "start": "node build/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlee-dev/create-mern-application.git"
  },
  "keywords": [
    "mern",
    "bootstrapper",
    "cli",
    "tool"
  ],
  "author": "Alex Lee (www.alexlee.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexlee-dev/create-mern-application/issues"
  },
  "homepage": "https://create-mern-application.herokuapp.com/",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@types/fs-extra": "^9.0.12",
    "@types/inquirer": "^7.3.3",
    "@types/node": "^16.4.3",
    "@types/recursive-readdir": "^2.2.0",
    "@types/semver": "^7.3.8",
    "@types/update-notifier": "^5.0.1",
    "@types/validate-npm-package-name": "^3.0.3",
    "copyfiles": "^2.4.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@sentry/node": "^6.10.0",
    "chalk": "^4.1.1",
    "commander": "^8.0.0",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.1.2",
    "ora": "^5.4.1",
    "recursive-readdir": "^2.2.2",
    "semver": "^7.3.5",
    "update-notifier": "^5.1.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
