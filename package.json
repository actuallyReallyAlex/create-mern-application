{
  "name": "create-mern-application",
  "version": "0.10.0",
  "description": "A bootstrapper for creating a MERN application.",
  "bin": {
    "create-mern-application": "./index.js"
  },
  "main": "index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf build && tsc && copyfiles -u 1 \"src/template/**/*\" build",
    "build-template": "rimraf tester && tsc && npm run format-template && npm run whitespace-template",
    "format-template": "prettier --write \"tester/**/*\"",
    "start": "node build/index.js",
    "test": "jest",
    "whitespace-template": "replace '(\\/\\* NEW LINE \\*\\/)' '' tester/**/* -r"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlee-dev/create-mern-application.git"
  },
  "keywords": [
    "mern",
    "bootstrapper",
    "cli",
    "tool",
    "cra"
  ],
  "author": "Alex Lee (www.alexlee.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexlee-dev/create-mern-application/issues"
  },
  "homepage": "https://github.com/alexlee-dev/create-mern-application#readme",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@types/fs-extra": "^9.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^14.0.13",
    "@types/recursive-readdir": "^2.2.0",
    "@types/semver": "^7.2.0",
    "@types/update-notifier": "^4.1.0",
    "@types/validate-npm-package-name": "^3.0.0",
    "copyfiles": "^2.3.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@sentry/node": "^5.17.0",
    "chalk": "^4.1.0",
    "commander": "^5.1.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.1.0",
    "ora": "^4.0.4",
    "recursive-readdir": "^2.2.2",
    "semver": "^7.3.2",
    "update-notifier": "^4.1.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
